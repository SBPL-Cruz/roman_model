<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
    <gazebo>
        <static>false</static>

        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
            <xacro:if value="$(arg namespace)">
                <robotNamespace>rcta_roman</robotNamespace>
            </xacro:if>
            <robotSimType>roman_simulation/KinematicRobotHWSim</robotSimType>
        </plugin>
    </gazebo>
</robot>
